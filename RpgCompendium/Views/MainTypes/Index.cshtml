@using RpgCompendium.Models;
@{
  Layout = "_Layout";
}

<h1>List of Main Types</h1>

<h2>Main Type</h2>
@if (@Model.Count == 0)
{
  <h3>No main types have been added yet!</h3>
}
@foreach (MainType mainType in Model)
{
  <li>@Html.ActionLink($"{mainType.MainTypeName}", "Details", new { id = mainType.MainTypeId}) </li>
}
<br>
<p>@Html.ActionLink("Add New Main Type", "Create", null, null, new {@class="btn btn-success btn-sm"})</p>